---
// Astro component frontmatter (server-side)
---

<!-- Main Header -->
<header class="bg-white border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3">
        <div class="bg-gradient-to-br from-orange-500 to-red-500 text-white p-2 rounded-lg font-bold text-xl">
          üì±
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Apps de <span class="text-orange-500">Apostas</span></h1>
          <p class="text-sm text-gray-600">In√≠cio ‚Ä¢ Top Apps ‚Ä¢ Android ‚Ä¢ iOS</p>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-900 hover:text-orange-500 transition-colors font-medium">
          In√≠cio
        </a>
        <a href="/top-apps" class="text-gray-900 hover:text-orange-500 transition-colors font-medium">
          Top Apps
        </a>
        <a href="/android" class="text-gray-900 hover:text-orange-500 transition-colors font-medium">
          Android
        </a>
        <a href="/ios" class="text-gray-900 hover:text-orange-500 transition-colors font-medium">
          iOS
        </a>
        <a href="/reviews" class="text-gray-900 hover:text-orange-500 transition-colors font-medium">
          Reviews
        </a>
        <a href="/tutoriais" class="text-gray-900 hover:text-orange-500 transition-colors font-medium">
          Tutoriais
        </a>
        <a href="/blog" class="text-gray-900 hover:text-orange-500 transition-colors font-medium">
          Blog
        </a>
      </nav>

      <!-- Search and User Actions -->
      <div class="flex items-center space-x-4">
        <!-- Search -->
        <div class="hidden md:flex items-center">
          <div class="relative">
            <input 
              type="text" 
              placeholder="Buscar apps..."
              class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-orange-500 text-sm"
            >
            <svg class="w-4 h-4 absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
        
        <button class="bg-orange-500 text-white px-6 py-2 rounded-lg hover:bg-orange-600 transition-colors font-medium">
          Baixar Apps
        </button>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        class="md:hidden p-2"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden bg-white border-t border-gray-200 hidden">
    <nav class="px-4 py-4 space-y-4">
      <a href="/" class="block text-gray-900 hover:text-orange-500 transition-colors">
        In√≠cio
      </a>
      <a href="/top-apps" class="block text-gray-900 hover:text-orange-500 transition-colors">
        Top Apps
      </a>
      <a href="/android" class="block text-gray-900 hover:text-orange-500 transition-colors">
        Android
      </a>
      <a href="/ios" class="block text-gray-900 hover:text-orange-500 transition-colors">
        iOS
      </a>
      <a href="/reviews" class="block text-gray-900 hover:text-orange-500 transition-colors">
        Reviews
      </a>
      <a href="/tutoriais" class="block text-gray-900 hover:text-orange-500 transition-colors">
        Tutoriais
      </a>
      <a href="/blog" class="block text-gray-900 hover:text-orange-500 transition-colors">
        Blog
      </a>
    </nav>
  </div>
</header>

<script>
  // Client-side script for mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  
  .animate-scroll {
    animation: scroll 20s linear infinite;
  }
</style>